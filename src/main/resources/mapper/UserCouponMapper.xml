<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserCouponMapper">

    <resultMap id="UserCouponResultMap" type="com.example.demo.domain.UserCoupon">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="coupon_id" property="couponId"/>
        <result column="coupon_code" property="couponCode"/>
        <result column="status" property="status"/>
        <result column="used_time" property="usedTime"/>
        <result column="used_order_id" property="usedOrderId"/>
        <result column="receive_time" property="receiveTime"/>
        <result column="expire_time" property="expireTime"/>
    </resultMap>

    <select id="selectById" resultMap="UserCouponResultMap">
        select * from user_coupon where id = #{id}
    </select>

    <select id="selectByUserId" resultMap="UserCouponResultMap">
        select * from user_coupon where user_id = #{userId} order by receive_time desc
    </select>

    <select id="selectAvailableByUserId" resultMap="UserCouponResultMap">
        select * from user_coupon 
        where user_id = #{userId} 
        and status = 1 
        and expire_time > now() 
        order by expire_time asc
    </select>

    <select id="selectByCouponCode" resultMap="UserCouponResultMap">
        select * from user_coupon where coupon_code = #{couponCode}
    </select>

    <select id="selectByUserIdAndCouponId" resultMap="UserCouponResultMap">
        select * from user_coupon 
        where user_id = #{userId} 
        and coupon_id = #{couponId}
    </select>

    <select id="countByUserIdAndCouponId" resultType="java.lang.Integer">
        select count(*) from user_coupon 
        where user_id = #{userId} 
        and coupon_id = #{couponId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into user_coupon(user_id, coupon_id, coupon_code, status, receive_time, expire_time)
        values (#{userId}, #{couponId}, #{couponCode}, #{status}, #{receiveTime}, #{expireTime})
    </insert>

    <update id="update">
        update user_coupon
        set status = #{status},
            used_time = #{usedTime},
            used_order_id = #{usedOrderId}
        where id = #{id}
    </update>

    <delete id="delete">
        delete from user_coupon where id = #{id}
    </delete>

</mapper>
