<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.CategoryMapper">

    <resultMap id="CategoryResultMap" type="com.example.demo.domain.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="icon" property="icon"/>
        <result column="description" property="description"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectById" resultMap="CategoryResultMap">
        select * from category where id = #{id}
    </select>

    <select id="selectAll" resultMap="CategoryResultMap">
        select * from category where status = 1 order by sort_order asc, id asc
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into category(name, icon, description, sort_order, status)
        values (#{name}, #{icon}, #{description}, #{sortOrder}, #{status})
    </insert>

    <update id="update">
        update category
        set name        = #{name},
            icon        = #{icon},
            description = #{description},
            sort_order  = #{sortOrder},
            status      = #{status}
        where id = #{id}
    </update>

    <delete id="delete">
        delete from category where id = #{id}
    </delete>
</mapper>


