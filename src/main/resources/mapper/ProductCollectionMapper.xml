<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ProductCollectionMapper">

    <resultMap id="ProductCollectionResultMap" type="com.example.demo.domain.ProductCollection">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectByUserId" resultMap="ProductCollectionResultMap">
        select *
        from product_collection
        where user_id = #{userId}
        order by create_time desc
        limit #{offset}, #{limit}
    </select>

    <select id="selectByUserIdAndProductId" resultMap="ProductCollectionResultMap">
        select *
        from product_collection
        where user_id = #{userId}
          and product_id = #{productId}
    </select>

    <select id="countByUserId" resultType="java.lang.Integer">
        select count(*)
        from product_collection
        where user_id = #{userId}
    </select>

    <delete id="deleteByUserIdAndProductId">
        delete from product_collection
        where user_id = #{userId}
          and product_id = #{productId}
    </delete>

</mapper>
