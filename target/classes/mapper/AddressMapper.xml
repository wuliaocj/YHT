<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.AddressMapper">

    <resultMap id="AddressResultMap" type="com.example.demo.domain.Address">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="consignee" property="consignee"/>
        <result column="phone" property="phone"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="district" property="district"/>
        <result column="detail_address" property="detailAddress"/>
        <result column="postal_code" property="postalCode"/>
        <result column="is_default" property="isDefault"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="AddressResultMap">
        select * from address where id = #{id}
    </select>

    <select id="selectByUserId" resultMap="AddressResultMap">
        select * from address where user_id = #{userId} and status = 1 order by is_default desc, id desc
    </select>

    <select id="selectDefaultByUserId" resultMap="AddressResultMap">
        select *
        from address
        where user_id = #{userId}
          and status = 1
          and is_default = 1
        limit 1
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into address(user_id, consignee, phone, province, city, district,
                            detail_address, postal_code, is_default, status)
        values (#{userId}, #{consignee}, #{phone}, #{province}, #{city}, #{district},
                #{detailAddress}, #{postalCode}, #{isDefault}, #{status})
    </insert>

    <update id="update">
        update address
        set consignee      = #{consignee},
            phone          = #{phone},
            province       = #{province},
            city           = #{city},
            district       = #{district},
            detail_address = #{detailAddress},
            postal_code    = #{postalCode},
            is_default     = #{isDefault},
            status         = #{status}
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete from address where id = #{id}
    </delete>
</mapper>


